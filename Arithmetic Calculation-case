import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner n=new Scanner(System.in);
        int a=n.nextInt();
        int b=n.nextInt();
        char c=n.next().charAt(0);
        double d;
        switch(c){
            case '+':
                d=a+b;
                System.out.printf("Addition of two number is %.1f\n",d);
                break;
                
            case '-':
                d=a-b;
                System.out.printf("Subtraction of two number is %.1f\n",d);
                break;
                
            case '*':
                d=a*b;
                System.out.printf("Multiplication of two number is %.1f\n",d);
                break;
                
            case '/':
                d=a/b;
                System.out.printf("Division of two number is %.1f\n",d);
                break;
                
            case '%':
                d=a%b;
                System.out.printf("Modulo of two number is %.1f\n",d);
                break;
                
            default:
                System.out.println("Invalid Input");
        }
    }
}
